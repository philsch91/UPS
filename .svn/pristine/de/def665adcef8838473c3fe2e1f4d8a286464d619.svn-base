<Window x:Class="UPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProjectSuite" Height="350" Width="525" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Login" Height="23" HorizontalAlignment="Center" Margin="416,28,0,0" Name="buttonLogin" VerticalAlignment="Top" Width="75" Click="buttonLogin_Click" />
        <Button Content="Send" Height="23" HorizontalAlignment="Center" Margin="416,276,0,0" Name="buttonSend" VerticalAlignment="Top" Width="75" Click="buttonSend_Click" />
        <TextBlock Height="23" HorizontalAlignment="Center" Margin="12,12,251,0" Name="textBlockLoginStatus" Text="" VerticalAlignment="Top" Width="240" TextAlignment="Left" />
        <Button Content="My Tasks" Height="23" HorizontalAlignment="Center" Margin="112,59,319,0" Name="buttonMyTasks" VerticalAlignment="Top" Width="72" Click="tasks_Click" />
        <Button Content="Last Booked" Height="23" HorizontalAlignment="Center" Margin="190,59,241,0" Name="buttonLastBooked" VerticalAlignment="Top" Width="72" />
        <Button Content="Global Tasks" Height="23" HorizontalAlignment="Center" Margin="268,59,163,0" Name="buttonGlobalTasks" VerticalAlignment="Top" Width="72" />
        <Button Content="Team Tasks" Height="23" HorizontalAlignment="Center" Margin="346,59,85,0" Name="buttonTeamTasks" VerticalAlignment="Top" Width="72" />        
        <Button Content="Update Tasks" Height="23" HorizontalAlignment="Center" Margin="416,59,0,0" Name="buttonTasks" VerticalAlignment="Top" Width="75" Click="buttonTasks_Click" />
        <ComboBox Height="23" HorizontalAlignment="Center" Margin="112,88,84,0" Name="comboBoxTasks" VerticalAlignment="Top" Width="306" SelectionChanged="comboBoxTasks_SelectionChanged" />
        
        <!-- Day/Week/Month Button -->
        <Button Content="Day" Height="23" HorizontalAlignment="Center" Margin="143,117,318,0" Name="buttonDayBooking" VerticalAlignment="Top" Width="42" />
        <Button Content="Week" Height="23" HorizontalAlignment="Center" Margin="191,117,270,0" Name="buttonWeekBooking" VerticalAlignment="Top" Width="42" />
        <Button Content="Month" Height="23" HorizontalAlignment="Center" Margin="239,117,222,0" Name="buttonMonthBooking" VerticalAlignment="Top" Width="42" />

        <Label Height="28" HorizontalAlignment="Center" Margin="323,115,139,0" Name="labelWorkAmount" Content="Hours" VerticalAlignment="Top" Width="41" />
        <TextBox Height="23" Margin="292,117,179,0" Name="textBoxWorkAmount" VerticalAlignment="Top" HorizontalAlignment="Center" Width="32" MaxLength="3" TextAlignment="Right" />

        <Label Content="%" Height="28" HorizontalAlignment="Center" Margin="398,115,86,0" Name="labelPercentage" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="366,117,105,0" Name="textBoxPercentage" VerticalAlignment="Top" HorizontalAlignment="Center" Width="32" MaxLength="3" TextAlignment="Right" />
        
        <Label Content="Category" Height="27" HorizontalAlignment="Center" Margin="112,143,286,0" Name="labelCategory" VerticalAlignment="Top" Width="105" />
        <ComboBox Height="23" HorizontalAlignment="Center" Margin="191,145,85,0" Name="comboBoxCategory" VerticalAlignment="Top" Width="227" />
        
        <Label Content="Activity" Height="27" HorizontalAlignment="Center" Margin="112,166,286,0" Name="labelActivity" VerticalAlignment="Top" Width="105" />
        <TextBox Height="25" HorizontalAlignment="Center" Margin="112,193,86,0" Name="textBoxActivity" VerticalAlignment="Top" Width="306" />
    </Grid>
</Window>
